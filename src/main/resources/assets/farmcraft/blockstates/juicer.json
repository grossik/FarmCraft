{
    "multipart": [
        {   "when": { "facing": "north" },
            "apply": { "model": "farmcraft:block/juicer" }
        },
        {   "when": { "facing": "east" },
            "apply": { "model": "farmcraft:block/juicer", "y": 90 }
        },
        {   "when": { "facing": "south" },
            "apply": { "model": "farmcraft:block/juicer", "y": 180 }
        },
        {   "when": { "facing": "west" },
            "apply": { "model": "farmcraft:block/juicer", "y": 270 }
        },
      
        {   "when": { "facing": "north", "has_glass": "true" },
            "apply": { "model": "farmcraft:block/juicer_bottle" }
        },
        {   "when": { "facing": "east", "has_glass": "true" },
            "apply": { "model": "farmcraft:block/juicer_bottle", "y": 90 }
        },
        {   "when": { "facing": "south", "has_glass": "true" },
            "apply": { "model": "farmcraft:block/juicer_bottle", "y": 180 }
        },
        {   "when": { "facing": "west", "has_glass": "true" },
            "apply": { "model": "farmcraft:block/juicer_bottle", "y": 270 }
        }
    ]
}